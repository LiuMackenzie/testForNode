<div class="main-content">
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <table id="simple-table" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>

                    <th> 标题</th>
                    <th>标签</th>
                    <th class="hidden-480">日期</th>


                </tr>
                </thead>

                <tbody>


                <tr>

                    <% notes.forEach(function(note){%>

                <tr>
                    <td><a href="/detail/<%= note.uuid%>"><%= note.title%></a></td>
                    <td><%= note.tag%></td>
                    <td><%= note.createTime%></td>
                </tr>
                <% });%>


                </tr>
                </tbody>
            </table>
        </div><!-- /.span -->
    </div><!-- /.row -->

    <div class="span12">
        <!--pageNum 表示当前为 第几页，numberOfPages表示bootstrap前台显示几页标识-->
        <ul id="page1" pageCount="<%=page.pageCount%>" pageNum="<%=page.num %>" pageSize="2" ></ul>
        <!-- 代码片段 -->
        <script type="text/javascript">
            $(function(){
                //分页功能
                var page=$('#page1');
                var options = {
                    bootstrapMajorVersion:3,
                    currentPage:page.attr('pageNum'),
                    totalPages:page.attr('pageCount'),
                    numberOfPages:page.attr('numberOfPages'),
                    pageUrl: function(type, page, current){
                        return "/list?p="+page;
                    }
                }
                $('#page1').bootstrapPaginator(options);
            })
        </script>




        <script src="/js/bootstrap-paginator.js"></script>
        <script src="/js/qunit-1.11.0.js"></script>
        </div>
    </div></div>
